<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<context id="kltn" targetRuntime="MyBatis3">
		<plugin type="com.github.CrispyBaconBits.mbg.plugins.DSLPlugin">
			<property name="modelRecordClassSuffix" value="Record" />
			<property name="mapperRecordClassSuffix" value="Mapper" />
			<property name="enableSubPackages" value="true" />
			<property name="enableMapperExtensions" value="true" />
		</plugin>

		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/kltn" userId="root"
			password="">
			<property name="nullCatalogMeansCurrent" value="true" />
		</jdbcConnection>


		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<javaModelGenerator
			targetPackage="web.nl.kltn.model.generator"
			targetProject="kltn-server">
		</javaModelGenerator>

		<sqlMapGenerator
			targetPackage="web.nl.kltn.mapper.sql.generator"
			targetProject="kltn-server/src/main/resources">
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER"
			targetPackage="web.nl.kltn.mapper.generator"
			targetProject="kltn-server">
		</javaClientGenerator>

		<table schema="kltn" tableName="%">
		</table>

	</context>

</generatorConfiguration>

