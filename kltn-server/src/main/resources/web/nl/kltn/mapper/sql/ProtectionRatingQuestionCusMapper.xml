<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="web.nl.kltn.mapper.ProtectionRatingQuestionCusMapper">

	<select id="searchByThesisId" resultType="web.nl.kltn.model.ProtectionRatingQuestion">
		SELECT
			id,
			pr_id,
			question,
			is_deleted,
			created_at,
			update_at
		FROM protection_rating_question
		WHERE 
			pr_id = #{prId}
			AND is_deleted = 0
	</select>
	
	<delete id="deleteByPrId">
		DELETE FROM protection_rating_question WHERE pr_id = #{prId}
	</delete>
</mapper>